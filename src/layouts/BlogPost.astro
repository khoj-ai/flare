---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { AUTHOR_METADATA } from '../consts';

type Props = CollectionEntry<'posts'>['data'];

const { title, description, pubDate, updatedDate, heroImage, author, tldr } = Astro.props;

const authorObj = AUTHOR_METADATA[author as keyof typeof AUTHOR_METADATA];
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			main {
				display: grid;
				grid-template-columns: auto auto;
				grid-gap: 6em;
				width: 70vw;
			}
			article {
				flex: 1 0 auto;
				padding: 1em;
			}
			aside {
				flex: 1 0 300px;
				padding: 1em;
			}
			img.hero-image {
				width: 100%;
				height: auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 100%;
				max-width: 100%;
				margin: auto;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				line-height: 1;
				color: var(--title-color);
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
			}
			.last-updated-on {
				font-style: italic;
			}
			p.tldr {
				padding: 1em;
				box-shadow: var(--box-shadow);
				border: 1px solid var(--accent);
			}
			div.author {
				display: grid;
				grid-template-columns: auto 1fr;
				grid-gap: 10px;
			}
			@media screen and (max-width: 720px) {
				main {
					display: block;
					width: 90vw;
				}
				article, aside {
					flex: 1 0 100%;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					{tldr && <p class="tldr">TLDR: {tldr}</p>}
					<slot />
				</div>
			</article>
			<aside>
				<div class="hero-image">
					{heroImage && <img class="hero-image" src={heroImage} alt="" />}
				</div>
				<div class="author">
					<div class="author-image">
						<img
							src={authorObj.avatar}
							alt={authorObj.name}
							width={64}
							height={64}
							style={{ borderRadius: '50%' }}
						/>
					</div>
					<div class="author-info">
						<a href={authorObj.github} class="author-link">
							<div class="author-name">{authorObj.name}</div>
						</a>
						<div class="author-bio">{authorObj.bio}</div>
					</div>
				</div>
			</aside>
		</main>
		<Footer />
	</body>
</html>
